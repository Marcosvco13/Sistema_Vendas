@model Sistema_Venda_SI.Model.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProCodigo" class="control-label"></label>
                <input readonly asp-for="ProCodigo" class="form-control" />
                <span asp-validation-for="ProCodigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProCodigoBarras" class="control-label"></label>
                <input asp-for="ProCodigoBarras" class="form-control" />
                <span asp-validation-for="ProCodigoBarras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProDescricao" class="control-label"></label>
                <input asp-for="ProDescricao" class="form-control" />
                <span asp-validation-for="ProDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProDataCadastro" class="control-label"></label>
                <input asp-for="ProDataCadastro" class="form-control" />
                <span asp-validation-for="ProDataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProDesativado" /> @Html.DisplayNameFor(model => model.ProDesativado)
                </label>
            </div>
            <div class="form-group">
                <select class="form-select" asp-for="ProCodigoTipoProduto" asp-items="@ViewBag.ProCodigoTipoProduto">
                    <option selected value="">Selecione um Tipo de Produto</option>
                </select>
                <span asp-validation-for="ProCodigoTipoProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-select" asp-for="ProCodigoUnidade" asp-items="@ViewBag.ProCodigoUnidade">
                    <option selected value="">Selecione uma Unidade</option>
                </select>
                <span asp-validation-for="ProCodigoUnidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
